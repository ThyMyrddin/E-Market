<div id="<%= dom_id article %>">
  <p>
    <strong>Label:</strong>
    <%= article.label %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= article.price %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= article.description %>
  </p>

  <p>
    <strong>City:</strong>
    <%= article.localisation %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= article.category %>
  </p>

    <p>
    <strong>User:</strong>
    <%= article.user.lastname %>
    <%= article.user.firstname %>
    <%= image_tag(article.user.avatar,style:"width:50px;height:50px") %>
  </p>

  <p>
    <strong>Pictures:</strong>
    <% article.pictures.each do |picture| %>
      <%= image_tag(picture,style:"width:150px;height:150px")%>
    <%end%>
  </p>

</div>
